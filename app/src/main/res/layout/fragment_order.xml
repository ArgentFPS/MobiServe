<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFragment"
    android:background="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:id="@+id/ksp"
        android:cardCornerRadius="50dp"
        android:layout_marginTop="175dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >


        <RelativeLayout
            android:id="@+id/kusina"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kusina sa Plaza"
                android:textColor="@color/maroon"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Home of Authentic Marinduque Cooking!"
                android:textStyle="italic"
                android:textColor="@color/maroon"
                android:textSize="14sp"
                android:layout_marginTop="65dp">
            </TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/LaConcha"
        android:cardCornerRadius="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:id="@+id/lcnchannx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="La Concha Annex Restaurant"
                android:textColor="@color/maroon"
                android:textSize="28sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ang Bahay-Kainan na binabalik-balikan"
                android:textStyle="italic"
                android:textColor="@color/maroon"
                android:textSize="14sp"
                android:layout_marginTop="78dp">
            </TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/MamitaCafe"
        android:cardCornerRadius="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:id="@+id/mmtcf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="Mamita Cafe"
                android:textColor="@color/maroon"
                android:textSize="32sp"
                android:textStyle="bold">

            </TextView>



        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>

</LinearLayout>